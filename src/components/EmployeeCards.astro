---
import employeeData from "../data/employees.json";
import DynamicIcon from "@components/helpers/DynamicIcon.astro";
---

<section class="employee-cards">
  <ul class="cards">
    {
      employeeData.map((employee) => (
        <li class="card" key={employee.id}>
          <img src={employee.img} alt={employee.name} />
          <h3>{employee.name}</h3>
          <p>{employee.title}</p>
          <DynamicIcon name={employee.icon} />
          <DynamicIcon name={employee.icon} />
          <DynamicIcon name={employee.icon} />
        </li>
      ))
    }
  </ul>
</section>

<style>
  .employee-cards {
    padding: 2rem;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .card {
    border-radius: 10px;
    padding: 1rem;
    text-align: center;
  }

  .card img {
    width: 100%;
    height: auto;
    border-radius: 1.25rem;
  }

  .card h3 {
    margin: 0.5rem 0 0.25rem;
  }

  .card p {
    margin: 0;
    color: #555;
  }
  .icon {
    color: var(--black);
  }

  @media (max-width: 768px) {
    .cards {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .employee-cards {
      padding: 1rem;
    }

    .card {
      padding: 1rem 0.5rem;
    }
  }
</style>
