---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero full-width">
  <article>
    <div class="hero-content">
      <h1>Empowering Your Business Growth</h1>
      <p>Discover tailored strategies and expert insights to take your business to the next level. Let us help you navigate challenges and achieve sustainable success.</p>
      <button class="btn">Book a Meeting</button>
    </div>
    <Image class="img" src={CEOImage} alt="CEO" />
  </article>
  <Services />
</section>

<style>
  /* Styles her */
  section {
    width: 100%;
    height: auto;
    margin: 0;
    padding: 0;

    > article {
      display: grid;
      grid-template-columns: subgrid;
      grid-template-rows: subgrid;
      grid-row: 1 / span 2;
      grid-column: full;
      background-color: var(--bg-black-hero);
      height: 50vh;
    }

    .hero-content {
      padding-block: 10rem 3rem;
      background-color: var(--bg-black-hero);
      color: var(--white);
      grid-column: content-start;
      max-width: 56ch;
    }
    .img {
      max-height: 0;
      min-height: 100%;
      object-fit: cover;
      grid-column: middle / full-end;
      grid-row: 1 / span 2;
    }
    .btn {
      width: 12rem;
      background-color: var(--white);
      color: var(--black);
    }
  }

  @layer components {
    .hero {
      padding: 2rem;
      display: grid;
      grid-template-columns: subgrid;
    }
  }
</style>
