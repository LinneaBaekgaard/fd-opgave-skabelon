---
//@ts-nocheck
import servicesData from "@data/services.json";
console.log(servicesData);
---

<ul class="cards container">
  {
    servicesData.services.map((service) => (
      <li>
        <h2>{service.title}</h2>
        <p>{service.description}</p>
        <a href="#0">{service.buttonText}</a>
      </li>
    ))
  }
</ul>

<style>
  @layer components {
    ul {
      list-style: none;
      display: flex;
      padding: 0;
      gap: 20px;
      grid-row: 2 / span 2;

      li {
        background-color: var(--bg-card-dark);
        color: var(--white);
        padding: 46px;
        flex-direction: column;
        align-items: flex-start;
        justify-content: space-between;

        gap: 10px;
        flex: 1 0 0;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: var(--bg-card-dark);
        backdrop-filter: var(--bg-card-filter);
      }

      h2 {
        font-size: var(--step--3);
        margin-bottom: 0.6rem;
        font-style: normal;
        font-weight: 600;
      }
      p {
        font-size: var(--step--5);
        margin-bottom: 2.25rem;
        font-style: normal;
        font-weight: 400;
      }
      a {
        background-color: var(--bg-btn-card);
        color: var(--white);
        text-decoration: none;
        display: flex;
        padding: 1rem 1.9375rem;
        align-items: center;
        border-radius: 3.4375rem;
        gap: 0.625rem;
        line-height: 1.8rem;
      }
    }
  }
  @media (max-width: 768px) {
    ul.cards {
      flex-direction: column; /* Stak kort lodret */
      gap: 1.5rem;
      padding: 0 1rem;
      grid-row: unset; /* Fjern grid-row, s√• de kommer naturligt efter hero */
      margin-top: 2rem; /* Ekstra afstand fra hero */
    }
  }
</style>
